<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <Button
            android:id="@+id/searchIt"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:background="#3372E0"
            android:text="Search"
            android:textColor="#ffffff"

            />

        <EditText
            android:id="@+id/searchText"
            android:layout_width="fill_parent"
            android:layout_height="110px"
            android:layout_marginRight="45dp"
            android:layout_toLeftOf="@id/searchIt"
            android:hint="search"
            android:textSize="14dp" />

        <Button
            android:id="@+id/butt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchText"
            android:layout_marginTop="30px"

            android:background="#3372E0"
            android:padding="@dimen/abc_action_bar_default_padding_material"
            android:text="Button 1"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/butt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchText"
            android:layout_marginLeft="75px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/butt1"
            android:background="#3372E0"
            android:padding="@dimen/abc_action_bar_default_padding_material"
            android:text="Button 2"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/butt1"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:text="Relevancy"
            android:textColor="#483d8b"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/butt2"
            android:textColor="#483d8b"
            android:paddingLeft="14px"
            android:paddingTop="10dp"
            android:text="Match Name"
            android:textStyle="bold" />
    </RelativeLayout>


    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"


        />


</LinearLayout>




